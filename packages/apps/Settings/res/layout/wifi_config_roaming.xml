<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="@string/wifi_roaming_threshold_desc" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/wifi_roaming_symbol" />
                <EditText
                    android:id="@+id/wifi_roaming_threshold_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="@null"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/wifi_roaming_unit" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/wifi_roaming_threshold_range" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="@string/wifi_roaming_diff_desc" />
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">
                <EditText
                    android:id="@+id/wifi_roaming_diff_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:hint="@null"
                    android:inputType="number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/wifi_roaming_unit" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/wifi_roaming_diff_range" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

            <CheckBox android:id="@+id/fast_roam_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_enable_desc"
                    android:visibility="gone"/>

            <CheckBox android:id="@+id/roam_scan_offload_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_scan_offload_enable"
                    android:visibility="gone"/>

	        <CheckBox android:id="@+id/acrossband_roam_enable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_acrossband_enable_desc"/>

            <CheckBox android:id="@+id/wifi_enable_roaming_channels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_enable_roaming_channel_desc"
                    android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:orientation="horizontal">
            <Button
                    android:id="@+id/wifi_roaming_setting"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="12dip"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_button_text"
                    android:gravity="center" />

            <Button
                    android:id="@+id/wifi_roaming_reset"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="12dip"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_button_reset_text"
                    android:gravity="center" />

            <Button
                    android:id="@+id/wifi_roaming_cancel"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dip"
                    android:layout_marginBottom="12dip"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_roaming_button_cancel_text"
                    android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
