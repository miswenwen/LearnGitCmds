<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="300sp"
         android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:orientation="vertical">

        <TextView
                android:id="@+id/config_import_dialog_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip" />

        <LinearLayout android:id="@+id/l_bk_conf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:id="@+id/backup_config_item"
                    android:clickable="true"
                    android:text="@string/wifi_backup_config" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dip"
                    android:paddingTop="8dip"
                    android:id="@+id/backup_config_path_item"
                    android:text="@string/wifi_backup_config_path" />
        </LinearLayout>

        <RelativeLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/import_dialog_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dlg_ok" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
